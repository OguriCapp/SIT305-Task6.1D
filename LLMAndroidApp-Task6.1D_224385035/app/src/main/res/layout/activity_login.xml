<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_green"
    android:padding="20dp">

    <!-- App Title -->
    <TextView
        android:id="@+id/appTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_title"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:textStyle="bold|italic"
        android:fontFamily="serif"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp" />

    <!-- Login Form Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_below="@id/appTitleTextView">

        <!-- Welcome Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:alpha="0"
            android:id="@+id/welcomeTextView" />

        <!-- Student Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/student"
            android:textSize="40sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:alpha="0"
            android:id="@+id/studentTextView" />

        <!-- Learning Encouragement Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lets_start_learning"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="40dp"
            android:alpha="0"
            android:id="@+id/encouragementTextView" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/usernameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:elevation="2dp"
            android:alpha="0" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:inputType="textPassword"
            android:elevation="2dp"
            android:alpha="0" />

        <!-- Login Button -->
        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textColor="@color/white"
            android:background="@drawable/green_button_gradient"
            android:textAllCaps="false"
            android:padding="12dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp"
            android:alpha="0" />

        <!-- Account Creation Link -->
        <TextView
            android:id="@+id/needAccountTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/need_an_account"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:alpha="0" />
    </LinearLayout>
</RelativeLayout> 